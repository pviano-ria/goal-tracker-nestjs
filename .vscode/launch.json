{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "NestJS Debug (start:dev)",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "args": [
        "-r",
        "tsconfig-paths/register",
        "${workspaceFolder}/src/main.ts"
      ],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "name": "Launch Chrome to API",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000/api/v1/goals",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "NestJS + Browser",
      "configurations": [
        "NestJS Debug (start:dev)",
        "Launch Chrome to API"
      ]
    }
  ]
}

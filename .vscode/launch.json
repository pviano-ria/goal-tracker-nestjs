{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "NestJS Debug (start:dev)",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "args": [
        "-r",
        "tsconfig-paths/register",
        "${workspaceFolder}/src/main.ts"
      ],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    }
  ]
}
